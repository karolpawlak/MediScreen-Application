<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mediscreenapp">
    <!-- PERMISSIONS -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MedicalHistoryActivityP3"
            android:label="@string/lungHistoryTitle">
        </activity>
        <activity
            android:name=".ui.MedicalHistoryActivityP2"
            android:label="@string/heartHistoryTitle">
        </activity>
        <activity
            android:name=".ui.MedicalHistoryActivityP1"
            android:label="@string/diabetesHistoryTitle">
        </activity>
        <activity
            android:name=".ui.GPActivity"
            android:label="@string/addGPTitle"
            android:parentActivityName=".ui.ProfileActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.ProfileActivity" />
        </activity>
        <activity
            android:name=".ui.InsurerActivity"
            android:label="@string/addInsurerTitle"
            android:parentActivityName=".ui.ProfileActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.ProfileActivity" />
        </activity>
        <activity
            android:name=".ui.EditProfileActivity"
            android:label="@string/editprofileTitle"
            android:parentActivityName=".ui.ProfileActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.ProfileActivity" />
        </activity>
        <activity
            android:name=".ui.HeartActivity"
            android:label="@string/heartTitle"
            android:parentActivityName=".ui.DiagnosisActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.DiagnosisActivity" />
        </activity>
        <activity
            android:name=".ui.LungActivity"
            android:label="@string/lungTitle"
            android:parentActivityName=".ui.DiagnosisActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.DiagnosisActivity" />
        </activity>
        <activity
            android:name=".ui.DiabetesActivity"
            android:label="@string/diabetesTitle"
            android:parentActivityName=".ui.DiagnosisActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.DiagnosisActivity" />
        </activity>
        <activity
            android:name=".ui.RecoveryActivity"
            android:label="@string/recoveryTitle"
            android:parentActivityName=".ui.LoginActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/helpTitle"
            android:parentActivityName=".ui.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ProfileActivity"
            android:label="@string/profileTitle"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.FeedbackActivity"
            android:label="@string/feedbackTitle" />
        <activity
            android:name=".ui.DiagnosisActivity"
            android:label="@string/diagnosisTitle"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.SupportActivity"
            android:label="@string/supportTitle" />
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/registerTitle"
            android:parentActivityName=".ui.HomeActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/homeTitle"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/loginTitle"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/AppTheme">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mediscreenapp.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.SplashScreenActivity"
            android:theme="@style/AppThemeNoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/mainTitle"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
    </application>

</manifest>